<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.heroku.fig_know_wat.sampleappfrostudent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Описание стартовой активити-->
        <activity
            android:name=".CatalogActivity"
            android:label="@string/catalog_activity_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Обязательно добавляйте все ваши активити в файл манифеста!-->
        <!-- Описание ButtonsActivity-->
        <activity
            android:name=".ButtonsActivity"
            android:label="@string/buttons_activity_label" />
        <!-- Описание MainActivity-->
        <activity
            android:name=".MainActivity"
            android:label="@string/sample_activity_label" />
        <!-- Описание TextFieldsActivity-->
        <activity
            android:name=".TextFieldsActivity"
            android:label="@string/text_fields_activity_label" />
    </application>

</manifest>
